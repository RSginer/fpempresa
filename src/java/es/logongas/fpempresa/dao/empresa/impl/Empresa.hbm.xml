<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="es.logongas.fpempresa.modelo.empresa.Empresa" >
        
        <cache usage="read-write" />
        
        <id name="idEmpresa" >
            <generator class="identity" />
        </id>

        <property name="nombreComercial" />
        <property name="razonSocial" />
        <property name="cif" />

        
        <component name="direccion" >
            <property name="tipoVia" >
                <type name="org.hibernate.type.EnumType">
                    <param name="enumClass">es.logongas.fpempresa.modelo.comun.geo.TipoVia</param>
                    <param name="type">12</param>
                </type>
            </property>
            <property name="nombreVia" />
            <property name="otrosDireccion" />
            <property name="codigoPostal" />
            <many-to-one name="municipio">
                <column name="idMunicipio"  />
            </many-to-one>
        </component>
        
        <many-to-one name="centro" update="false">
          <column name="idCentro"/>
        </many-to-one> 

        <component name="contacto" >
            <property name="url" />
            <property name="email" />
            <property name="persona" />
            <property name="telefono" />
            <property name="fax" />
            <property name="textoLibre" />
        </component>

    </class>
</hibernate-mapping>

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="es.logongas.fpempresa.modelo.centro.Centro" >
        
        <cache usage="read-write" />
        
        <id name="idCentro" >
            <generator class="identity" />
        </id>

        <property name="descripcion" />
        <property name="fpempresa" type="boolean" />
        
        <component name="direccion" >
            <property name="tipoVia" >
                <type name="org.hibernate.type.EnumType">
                    <param name="enumClass">es.logongas.fpempresa.modelo.comun.geo.TipoVia</param>
                    <param name="type">4</param>
                </type>
            </property>
            <property name="nombreVia" />
            <property name="otrosDireccion" />
            <property name="codigoPostal" />
            <many-to-one name="municipio">
                <column name="idMunicipio"  />
            </many-to-one>
        </component>


    </class>
</hibernate-mapping>

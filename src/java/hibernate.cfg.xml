<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="connection.datasource">java:/comp/env/jdbc/fpempresa</property>
    <property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>
    <property name="hibernate.show_sql">false</property>
    <!-- Incluir la cache de 2º Nivel EHCache-->
    <property name="hibernate.cache.region.factory_class">org.hibernate.cache.ehcache.EhCacheRegionFactory</property>
    <property name="hibernate.cache.use_second_level_cache">true</property>
    <property name="hibernate.cache.use_query_cache">true</property>
    <!-- Tablas del titulado -->
    <mapping resource="es/logongas/fpempresa/dao/titulado/impl/Titulado.hbm.xml"/>
    <mapping resource="es/logongas/fpempresa/dao/titulado/impl/TituloIdioma.hbm.xml"/>
    <mapping resource="es/logongas/fpempresa/dao/titulado/impl/ExperienciaLaboral.hbm.xml"/>
    <mapping resource="es/logongas/fpempresa/dao/titulado/impl/FormacionAcademica.hbm.xml"/>
    <!-- Tablas sobre el centro -->
    <mapping resource="es/logongas/fpempresa/dao/centro/impl/Centro.hbm.xml"/>
    <!-- Tablas comunes -->
    <mapping resource="es/logongas/fpempresa/dao/comun/impl/Usuario.hbm.xml"/>
    <mapping resource="es/logongas/fpempresa/dao/comun/impl/Provincia.hbm.xml"/>
    <mapping resource="es/logongas/fpempresa/dao/comun/impl/Municipio.hbm.xml"/>
    <mapping resource="es/logongas/fpempresa/dao/comun/impl/Familia.hbm.xml"/>
    <mapping resource="es/logongas/fpempresa/dao/comun/impl/Ciclo.hbm.xml"/>
    <!-- Definición de la seguridad -->
    <mapping resource="es/logongas/ix3/model/persistence/impl/dao/Identity.hbm.xml"/>
    <mapping resource="es/logongas/ix3/model/persistence/impl/dao/GroupMember.hbm.xml"/>
    <mapping resource="es/logongas/ix3/model/persistence/impl/dao/ACE.hbm.xml"/>
    <mapping resource="es/logongas/ix3/model/persistence/impl/dao/Permission.hbm.xml"/>
    <mapping resource="es/logongas/ix3/model/persistence/impl/dao/SecureResource.hbm.xml"/>
    <mapping resource="es/logongas/ix3/model/persistence/impl/dao/SecureResourceType.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
